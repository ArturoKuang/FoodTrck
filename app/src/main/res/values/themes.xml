<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodTrck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_500</item>
        <item name="colorSecondaryVariant">@color/blue_grey_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/black</item>

        <item name="toolbarStyle">@style/Widget.FoodTrck.Toolbar</item>
        <item name="scrimBackground">@color/white_50_alpha_060</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.FoodTrck.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.FoodTrck.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.FoodTrck.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.FoodTrck.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FoodTrck.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FoodTrck.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.FoodTrck.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FoodTrck.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FoodTrck.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.FoodTrck.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.FoodTrck.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.FoodTrck.Overline</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/blue_50_alpha_060</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>
</resources>